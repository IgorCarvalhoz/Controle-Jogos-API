@model List<Controle_Jogos_API.Entities.Jogo>
@{
    ViewData["Title"] = "Avaliacao";
}
<h1>Jogos Avaliados</h1>
@if (Model.Count > 0)
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Nome do Jogo</th>
                <th>Avaliação</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var jogo in Model)
            {
                <tr>
                    <td>@jogo.Nome</td>
                    <td>@jogo.Avaliar</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Nenhum jogo foi avaliado ainda.</p>
}

<br />
<div>
    <a asp-action="Index" type="button" class="btn btn-outline-secondary btn-sm">Voltar</a>
</div>