@model Controle_Jogos_API.Entities.Jogo
@{
    ViewData["Title"] = "Detalhes";
}
<h1>Detalhes</h1>
<hr/>
<div class = "row">
    <div class = "col-md-4">
        <form asp-action="Detalhes">
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for = "Nome" class = "control-label"></label>
                <input asp-for ="Nome" class="form-control" readonly="readonly"/>
            </div>
            <div class ="form-group">
                <label asp-for = "HorasJogadas" class = "control-label"></label>
                <input asp-for ="HorasJogadas" class="form-control" readonly="readonly"/>
            </div>
            <div class ="form-group">
                <label asp-for = "AnoLancamento" class = "control-label"></label>
                <input asp-for ="AnoLancamento" class="form-control" readonly="readonly"/>
            </div>
            <div class ="form-group">
                <label asp-for = "AnoJogado" class = "control-label"></label>
                <input asp-for ="AnoJogado" class="form-control" readonly="readonly"/>
            </div>
            <div>
                <div class ="form-group">
                <label asp-for = "UltimaAtualizacao" class = "control-label"></label>
                <input asp-for ="UltimaAtualizacao" class="form-control" readonly="readonly"/>
            </div>
            <div>
                <input asp-for= "Finalizado" class="form-check-input" type="checkbox" id="defaultCheck1" disabled>
                <label asp-for ="Finalizado" class="form-checklabel" for="defaultcheck1" readonly="readonly">Finalizado</label>
            </div>
            
            </div>
            <br/>
        </form>
    </div>
</div>
<br/>
<div>
    <a asp-action="Index" type="button" class="btn btn-outline-secondary btn-sm">Voltar</a> 
</div>