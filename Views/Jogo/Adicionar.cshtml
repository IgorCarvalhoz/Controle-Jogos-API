@model Controle_Jogos_API.Entities.Jogo
@{
    ViewData["Title"] = "Adicionar";
}
<h1>Adicionar</h1>
<hr/>
<div class = "row">
    <div class = "col-md-4">
        <form asp-action="Adicionar">
            <div class="form-group">
                <label asp-for = "Nome" class = "control-label"></label>
                <input asp-for ="Nome" class="form-control"/>
            </div>
            <div class ="form-group">
                <label asp-for = "HorasJogadas" class = "control-label"></label>
                <input asp-for ="HorasJogadas" class="form-control"/>
            </div>
            <div class ="form-group">
                <label asp-for = "AnoLancamento" class = "control-label"></label>
                <input asp-for ="AnoLancamento" class="form-control"/>
            </div>
            <div class ="form-group">
                <label asp-for = "AnoJogado" class = "control-label"></label>
                <input asp-for ="AnoJogado" class="form-control"/>
            </div>
            <div class ="form-group">
                <label asp-for = "Avaliar" class = "control-label"></label>
                <input asp-for ="Avaliar" class="form-control"/>
            </div>
            <div class ="form-group">
                <input asp-for= "Finalizado" class="form-check-input" type="checkbox" id="defaultCheck1">
                <label asp-for ="Finalizado" class="form-checklabel" for="defaultcheck1">Finalizado</label>
            </div>
            <br/>
            <button type="submit" class="btn btn-outline-success btn-sm">Adicionar</button>
        </form>
    </div>
</div>
<br/>
<div>
    <a asp-action="Index" type="button" class="btn btn-outline-secondary btn-sm">Voltar</a> 
</div>